{
  "name": "server",
  "version": "0.1.0",
  "description": "groovemechanic server",
  "repository": "https://github.com/abelnation/groovemechanic",
  "main": "index.js",
  "scripts": {
    "build": "mkdir -p dist src/thrift && npm run build:thrift && npm run build:ts",
    "build:ts": "tsc",
    "build:thrift": "thrift-typescript --target thrift-server --sourceDir thrift --outDir src/thrift",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:watch": "nodemon dist/index.js",
    "test": "mocha --reporter ${REPORTER:-min} ${TESTS:-'./dist/**/*.test.js'}",
    "db:init": "initdb ./dbdata -U postgres",
    "db:seed": "psql -U postgres -a -f scripts/seed_db.psql",
    "db:server": "postgres -D ./dbdata",
    "db:psql": "psql -U groovemechanic",
    "db:up": "./scripts/run_with_env.sh 'npm run migrate up'",
    "db:up:prod": "npm run migrate up",
    "db:clean": "rm -rf ./dbdata",
    "migrate": "node-pg-migrate",
    "prod:setup": "npm install && npm run build && npm run db:up:prod"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@creditkarma/thrift-client": "^0.7.3",
    "@creditkarma/thrift-server-core": "^0.7.3",
    "@creditkarma/thrift-server-express": "^0.7.3",
    "@creditkarma/thrift-typescript": "^2.0.5",
    "@types/express-graphql": "^0.6.1",
    "@types/express": "^4.16.0",
    "@types/graphql": "^0.13.3",
    "@types/knex": "^0.14.18",
    "@types/morgan": "^1.7.35",
    "@types/node-pg-migrate": "^2.3.1",
    "@types/node": "^10.5.5",
    "@types/pg": "^7.4.10",
    "@types/request": "^2.47.1",
    "@types/sequelize": "^4.27.24",
    "@types/thrift": "^0.10.7",
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "knex": "^0.15.2",
    "mocha": "^5.2.0",
    "morgan": "^1.9.0",
    "node-pg-migrate": "^3.8.1",
    "pg": "^7.4.3",
    "request": "^2.87.0",
    "sequelize": "^4.38.0",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "nodemon": "^1.18.3"
  }
}
