{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "Node",
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "inlineSources": true,
        "noEmit": true,
        "target": "es2015",
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": [
            "es2015",
            "es5",
            "es6",
            "es7",
            "dom"
        ],
        "typeRoots": [
          "node_modules/@types",
          "ts-definitions"
        ]
    }
}
